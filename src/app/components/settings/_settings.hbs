<h2 class="main__title">
  Settings
</h2>
<div class="settings-tabs">
  <p class="settings-tabs__desc">
    Pomodoros settings
  </p>
  <ul class="settings-tabs__tabs-controls tabs-controls">
    <li class="tabs-controls__item tabs-controls__item--pomodoros tabs-controls__item--active">
      Pomodoros
    </li>
    <li class="tabs-controls__item tabs-controls__item--categories">
      Categories
    </li>
  </ul>
  <ul class="settings-list">
    <li class="settings-list__item settings-list--work-time settings-list__item--work">
      <div class="settings-list__top-side">
        <h3 class="settings-list__title">
          Work Time
        </h3>
        <div class="settings-list__incr-decr incr-decr">
          <span class="incr-decr__decr icon-minus"></span>
          <input class="incr-decr__value" type="number">
          <span class="incr-decr__incr icon-add"></span>
        </div>
      </div>
      <p class="settings-list__desc">
        Please select a value between 15 and 25 <span class="settings-list__desc--white">minutes</span>
      </p>
    </li>
    <li class="settings-list__item settings-list--work-iteration settings-list__item--other">
      <div class="settings-list__top-side">
        <h3 class="settings-list__title">
          Work Iteration
        </h3>
        <div class="settings-list__incr-decr incr-decr">
          <span class="incr-decr__decr icon-minus"></span>
          <input class="incr-decr__value" type="number">
          <span class="incr-decr__incr icon-add"></span>
        </div>
      </div>
      <p class="settings-list__desc">
        Please select a value between 2 and 5 <span class="settings-list__desc--white">iterations</span>
      </p>
    </li>
    <li class="settings-list__item settings-list--short-break settings-list__item--education">
      <div class="settings-list__top-side">
        <h3 class="settings-list__title">
          Short Break
        </h3>
        <div class="settings-list__incr-decr incr-decr">
          <span class="incr-decr__decr icon-minus"></span>
          <input class="incr-decr__value" type="number">
          <span class="incr-decr__incr icon-add"></span>
        </div>
      </div>
      <p class="settings-list__desc">
        Please select a value between 3 and 5 <span class="settings-list__desc--white">minutes</span>
      </p>
    </li>
    <li class="settings-list__item settings-list--long-break settings-list__item--hobby">
      <div class="settings-list__top-side">
        <h3 class="settings-list__title">
          Long Break
        </h3>
        <div class="settings-list__incr-decr incr-decr">
          <span class="incr-decr__decr icon-minus"></span>
          <input class="incr-decr__value" type="number">
          <span class="incr-decr__incr icon-add"></span>
        </div>
      </div>
      <p class="settings-list__desc">
        Please select a value between 15 and 30 <span class="settings-list__desc--white">minutes</span>
      </p>
    </li>
  </ul>
  <div class="your-cycle">
    <h3 class="your-cycle__title">
      Your cycle
    </h3>
    <div class="cycle-block">
      <ul class="cycle-list">
      </ul>
      <ul class="cycle-time">
      </ul>
    </div>
  </div>
  <ul class="settings-tabs__setting-buttons setting-buttons">
    <li class="setting-buttons__item">
      <button class="setting-buttons__btn setting-buttons__btn_blue">
        Go to Tasks
      </button>
      <button class="setting-buttons__btn setting-buttons__btn_green">
        Save
      </button>
    </li>
  </ul>
</div>